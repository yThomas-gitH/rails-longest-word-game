<div class="m-3">
  <h1>New Game</h1>
  <h3 class="m-3">
  <% @letters.each do |letter| %>
    <span class="letter"><%= letter.upcase %></span>
  <% end %>
  </h3>
  <p class="pt-2">What is the longest word you can find?</p>
  <form class="form-inline" action="/score" method="post" data-turbo="false">
    <input type="text" name="answer">
    <input type="submit" value="Play" class="btn btn-primary mb-2">
    <input id="collected_input" name="<%= @letters.join%>" onchange="<%= @start_time%>" type="hidden" value="<%= Time.now%>" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
